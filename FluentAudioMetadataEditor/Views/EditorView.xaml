<?xml version="1.0" encoding="utf-8"?>
<UserControl mc:Ignorable="d"
             x:Class="FluentAudioMetadataEditor.Views.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:controls="using:FluentAudioMetadataEditor.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <Style x:Key="CodecPropertyTextBlockStyle" BasedOn="{StaticResource BodyStrongTextBlockStyle}" TargetType="TextBlock">
                    <Setter Property="FontSize" Value="12"/>
                </Style>
            </ResourceDictionary>
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Padding="16,8,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="256"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="256"/>
                <RowDefinition Height="16"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <controls:EditableCoverArt ImageSource="https://www.halopedia.org/images/2/2e/Halo2-Volume1-OriginalSoundtrack.jpg"
                                       IsEditable="True"
                                       Grid.Column="0"
                                       Grid.Row="0"/>

            <StackPanel Spacing="4" Grid.Row="2">
                <TextBlock FontSize="24"
                           TextWrapping="Wrap"
                           MaxLines="2"
                           Margin="0,-8,0,4"
                           Style="{StaticResource BodyStrongTextBlockStyle}"
                           Text="Remembrance"/>

                <ScrollViewer HorizontalScrollMode="Disabled">
                    <StackPanel Spacing="4">
                        <TextBlock Style="{StaticResource CodecPropertyTextBlockStyle}" Text="File name: Halo 2 - Remembrance.mp3"/>
                        <TextBlock Style="{StaticResource CodecPropertyTextBlockStyle}" Text="File type: MP3 (.mp3)"/>
                        <TextBlock Style="{StaticResource CodecPropertyTextBlockStyle}" Text="File size: 2.28 MB"/>
                        <TextBlock Style="{StaticResource CodecPropertyTextBlockStyle}" Text="Length: 00:01:17"/>
                        <TextBlock Style="{StaticResource CodecPropertyTextBlockStyle}" Text="Bit rate: 232 kb/s"/>
                        <TextBlock Style="{StaticResource CodecPropertyTextBlockStyle}" Text="Codec: MPEG"/>
                        <TextBlock Style="{StaticResource CodecPropertyTextBlockStyle}" Text="Sample rate: 44100 Hz"/>
                        <TextBlock Style="{StaticResource CodecPropertyTextBlockStyle}" Text="Location: C:\Music\"/>
                        <TextBlock Style="{StaticResource CodecPropertyTextBlockStyle}" Text="Date created: 2023-12-28 20:00:00"/>
                        <TextBlock Style="{StaticResource CodecPropertyTextBlockStyle}" Text="Date modified: 2023-12-28 20:08:00"/>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>

            <ScrollViewer HorizontalScrollMode="Disabled" Grid.Column="2" Grid.RowSpan="3">
                <StackPanel Spacing="16">
                    <TextBox PlaceholderText="Title" Text="Rememberence"/>
                    <TextBox PlaceholderText="Artist" Text="Martin O'Donnell;Michael Salvatori"/>
                    <TextBox PlaceholderText="Album" Text="Halo 2 Original Soundtrack and New Music Volume One"/>
                    <TextBox PlaceholderText="Date" Text="2004"/>
                    <TextBox PlaceholderText="Genre" Text="Soundtrack"/>
                    <TextBox PlaceholderText="Publisher" Text="Microsoft Music Publishing (ASCAP)"/>
                    <TextBox PlaceholderText="Copyright" Text="© 2004 Microsoft Corporation. All rights reserved. © 2004 Microsoft Music Publishing (ASCAP)"/>

                    <TextBox PlaceholderText="Comments" MinHeight="100" MaxHeight="300"/>

                    <StackPanel Spacing="4">
                        <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="Rating"/>

                        <RatingControl HorizontalAlignment="Left" MaxRating="5" Value="5"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Grid Padding="8" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Spacing="6">
                <Button Padding="6,4">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xe8e5;" FontSize="15"/>

                        <TextBlock Text="Open file" TextLineBounds="Tight" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button IsEnabled="False" Padding="6,4">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xe74e;" FontSize="15"/>

                        <TextBlock Text="Save file" TextLineBounds="Tight" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <Button x:Name="SettingsButton"
                    Click="SettingsButton_Click"
                    Padding="6,4"
                    Grid.Column="2">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon Glyph="&#xe713;" FontSize="15"/>

                    <TextBlock Text="Settings" TextLineBounds="Tight" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>
