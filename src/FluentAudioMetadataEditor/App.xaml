<?xml version="1.0" encoding="utf-8"?>
<Application x:Class="FluentAudioMetadataEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources>
                    <XamlControlsResources.MergedDictionaries>
                        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                        
                        <ResourceDictionary>
                            <x:Double x:Key="ContentDialogMaxHeight">600</x:Double>
                            <x:Double x:Key="ContentDialogMaxWidth">600</x:Double>
                            <x:Double x:Key="ContentDialogMinHeight">600</x:Double>
                            <x:Double x:Key="ContentDialogMinWidth">600</x:Double>
                        </ResourceDictionary>
                    </XamlControlsResources.MergedDictionaries>
                </XamlControlsResources>
                
                <ResourceDictionary Source="ms-appx:///Microsoft.UI.Xaml/DensityStyles/Compact.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="WindowCaptionBackground">Transparent</SolidColorBrush>
            <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled">Transparent</SolidColorBrush>
            <SolidColorBrush x:Key="WindowCaptionForeground">White</SolidColorBrush>
        </ResourceDictionary>
    </Application.Resources>
</Application>