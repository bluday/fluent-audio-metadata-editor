<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FluentMusicMetadataEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:FluentMusicMetadataEditor.UI.Controls"
    mc:Ignorable="d"
    x:DefaultBindMode="OneWay"
    Title="Fluent Music Metadata Editor">
    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base"/>
    </Window.SystemBackdrop>
    
    <Grid x:Name="RootGrid" Loaded="RootGrid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <controls:TitleBar x:Name="TitleBar"
                           Icon="{StaticResource AppIconImageSource}"
                           Title="{x:Bind Title}"/>

        <ContentControl x:Name="ContentControl"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Grid.Row="1"/>

        <ContentDialog Title="Hey!"
                       Content="Look at this dialog."
                       PrimaryButtonText="Ok"
                       CloseButtonText="Close"
                       Grid.RowSpan="2"/>
    </Grid>
</Window>